---
// import type { CollectionEntry } from "astro:content";
// import { Image } from "astro:assets";
import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";

import ChapterNav from "@/components/tl/index/ChapterNav.astro";

import "@/styles/variables/tl.scss";
import "@/styles/tl/pages.scss";

interface Props {
    title: string;
    titleOG?: string;
    description: string;
    chapterTotal: number;
    chapterSections: Section[];
    banner: ImageMetadata;
    bannerPosition: string;
    slug: string;
}

const {
    title,
    titleOG,
    description,
    chapterTotal,
    chapterSections,
    slug,
    banner,
    bannerPosition,
} = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
        <style
            lang="scss"
            define:vars={{
                storyBanner: `url(${banner.src})`,
                bannerPosition: `${bannerPosition}`,
            }}
        >
            .main__wrapper {
                display: flex;
                width: 100%;
                align-content: center;
                justify-content: center;
            }

            main {
                display: grid;
                justify-self: center;
                max-width: 1140px;
                /* grid-template-columns: 200px 1fr 300px; */
                grid-template-columns: 1fr 300px;
                /* grid-template-rows: auto 1fr; */
                gap: 25px;
                margin: 20px 80px;
            }

            article {
            }

            .banner {
                width: 100%;
                height: 250px;
                background: var(--storyBanner) no-repeat var(--bannerPosition) /
                    cover var(--background-primary);
            }
        </style>
    </head>

    <body>
        <Header />
        <div class="banner"></div>
        <div class="main__wrapper">
            <main>
                <article>
                    <section class="">
                        <div class="title__wrapper">
                            <h1 class="en">{title}</h1>
                            {titleOG && <h2 class="og">{titleOG}</h2>}
                        </div>
                        {description}
                        <slot />
                    </section>
                </article>
                <ChapterNav chapterSections={chapterSections} slug={slug} />
            </main>
        </div>
    </body>
</html>
