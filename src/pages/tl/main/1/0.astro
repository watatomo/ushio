---
import BaseHead from "components/BaseHead.astro";
import StoryIndex from "@/layouts/StoryIndex.astro";

import "styles/variables/tl.scss";
import "styles/tl/index.scss";
import "styles/series/18tr.scss";

const title = "Prologue: Still Blank";
const description =
    "The protagonist returns to their hometown of HAMA to see their childhood friend, Kafka, but it seems that he’s gone missing…";
const slug = "main/1/0";
const chapterTotal = 8;

const chapterSections: Section[] = [
    {
        // title: "Prologue",
        chapters: [
            {
                label: "My Sweet Hometown",
                href: 1,
            },
            {
                label: "Hospitality Beginnings SIDE:A",
                href: 2,
            },
            {
                label: "Hospitality Beginnings SIDE:B",
                href: 3,
            },
            {
                label: "Our First Trip",
                href: 4,
            },
            {
                label: "The Florist",
                href: 5,
            },
            {
                label: "The Eccentric Boy",
                href: 6,
            },
            {
                label: "The Journey in Our Memories",
                href: 7,
            },
            {
                label: "Bet Your Life on This",
                href: 8,
            },
        ],
    },
];

import banner from "img/st/illust/006_01.jpg";
const bannerPosition = "50% 30%";
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
    </head>

    <StoryIndex
        banner={banner}
        bannerPosition={bannerPosition}
        title={title}
        chapterTotal={chapterTotal}
        chapterSections={chapterSections}
        description={description}
        slug={slug}
    />
</html>
