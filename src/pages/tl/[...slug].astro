---
import { type CollectionEntry, getCollection } from "astro:content";
import ChapterPage from "../../layouts/ChapterPage.astro";
import StoryController from "@/components/tl/StoryController";
import "styles/dialog.scss";

export async function getStaticPaths() {
    const posts = await getCollection("tl");
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: post,
    }));
}
type Props = CollectionEntry<"tl">;

const post = Astro.props;
const { Content } = await post.render();
---

<ChapterPage {...post.data}>
    <StoryController series="18TRIP" client:load>
        <Content />
    </StoryController>
</ChapterPage>
